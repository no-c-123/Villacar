---
import { getFeaturedCars, cars, type Car } from '../data/cars';

const featuredCars = getFeaturedCars();
---

<main class="bg-white">
  <!-- Hero Section -->
  <section class="relative h-[600px] flex items-center justify-center overflow-hidden">
    <!-- Background Image Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/90 to-gray-900/70 z-10"></div>
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1552519507-da3b142c6e3d?w=1920');"></div>

    <div class="relative z-20 container mx-auto px-4 text-center text-white">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        Find Your Perfect Vehicle
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-3xl mx-auto">
        Quality vehicles from trusted brands. Serving the community with excellent service and great deals.
      </p>

      <div class="flex flex-wrap justify-center gap-4 mb-8">
        <a 
          href="/inventory" 
          class="px-8 py-4 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-all duration-300 font-semibold text-lg"
        >
          View Inventory
        </a>
        
        <a 
          href="/contact" 
          class="px-8 py-4 border-2 border-white text-white rounded-lg hover:bg-white hover:text-gray-900 transition-all duration-300 font-semibold text-lg"
        >
          Contact Us
        </a>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-3 gap-8 max-w-2xl mx-auto mt-12">
        <div class="text-center">
          <div class="text-4xl font-bold text-red-500 mb-1">{cars.length}+</div>
          <div class="text-sm text-gray-300">Vehicles</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-red-500 mb-1">15+</div>
          <div class="text-sm text-gray-300">Years</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-red-500 mb-1">10K+</div>
          <div class="text-sm text-gray-300">Happy Customers</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Cars Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Featured Vehicles</h2>
        <p class="text-lg text-gray-600">Check out our latest arrivals and popular models</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {featuredCars.map((car) => (
          <a href={`/cars/${car.id}`} class="group">
            <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300">
              <div class="relative overflow-hidden h-48">
                <img 
                  src={car.images[0]} 
                  alt={`${car.make} ${car.model}`}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div class="absolute top-3 right-3">
                  <span class={`px-3 py-1 rounded-full text-xs font-semibold ${
                    car.condition === 'New' ? 'bg-green-600 text-white' :
                    car.condition === 'Certified' ? 'bg-blue-600 text-white' :
                    'bg-gray-700 text-white'
                  }`}>
                    {car.condition}
                  </span>
                </div>
              </div>
              <div class="p-4">
                <h3 class="text-lg font-bold text-gray-900 mb-2">
                  {car.year} {car.make} {car.model}
                </h3>
                <div class="flex items-center text-sm text-gray-600 mb-3 space-x-3">
                  <span>{car.mileage.toLocaleString()} mi</span>
                  <span>•</span>
                  <span>{car.transmission}</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-2xl font-bold text-red-600">
                    ${car.price.toLocaleString()}
                  </span>
                  <span class="text-red-600 text-sm font-semibold group-hover:translate-x-1 transition-transform">
                    Details →
                  </span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="text-center mt-10">
        <a 
          href="/inventory" 
          class="inline-block px-8 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-all duration-300 font-semibold"
        >
          View All Vehicles
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Choose Villacar Autos LLC.</h2>
        <p class="text-lg text-gray-600">Your trusted dealership for quality vehicles and service</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Quality Vehicles</h3>
          <p class="text-gray-600">Every vehicle is thoroughly inspected and serviced</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Great Financing</h3>
          <p class="text-gray-600">Flexible financing options to fit your budget</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Expert Staff</h3>
          <p class="text-gray-600">Knowledgeable team ready to help you find the right car</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Customer First</h3>
          <p class="text-gray-600">Your satisfaction is our top priority</p>
        </div>
      </div>
    </div>
  </section>
</main>
