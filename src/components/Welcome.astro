---
interface Car {
  id: string;
  name: string;
  price: number;
  year: number;
  image: string;
}

const featuredCars: Car[] = [
  {
    id: "1",
    name: "Tesla Model S",
    price: 89999,
    year: 2024,
    image: "/images/cars/tesla-model-s.jpg"
  },
  {
    id: "2",
    name: "BMW M5",
    price: 103500,
    year: 2024,
    image: "/images/cars/bmw-m5.jpg"
  },
  {
    id: "3",
    name: "Porsche 911",
    price: 116950,
    year: 2024,
    image: "/images/cars/porsche-911.jpg"
  }
];
---

<main class="min-h-screen bg-gradient-to-br from-gray-900 to-blue-900">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 pt-20 pb-12">
    <div class="text-center max-w-4xl mx-auto">
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
        Welcome to <span class="text-blue-400">VillaCar</span>
      </h1>
      
      <p class="text-xl text-gray-300 mb-12 max-w-2xl mx-auto">
        Discover luxury and performance vehicles curated just for you
      </p>

      <div class="flex flex-wrap justify-center gap-6">
        <a 
          href="/inventory" 
          class="inline-flex items-center px-8 py-4 bg-blue-600 text-white rounded-lg hover:bg-blue-500 transition-all duration-300 hover:scale-105"
        >
          Browse Inventory
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        
        <a 
          href="#contact" 
          class="inline-flex items-center px-8 py-4 border-2 border-white/30 text-white rounded-lg hover:bg-white/10 transition-all duration-300 hover:scale-105"
        >
          Contact Us
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Featured Cars Section -->
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold text-white text-center mb-12">Featured Vehicles</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredCars.map((car) => (
        <div class="bg-white/10 rounded-lg overflow-hidden backdrop-blur-sm border border-white/10 hover:border-white/30 transition-all duration-300 hover:scale-105">
          <img 
            src={car.image} 
            alt={car.name}
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold text-white">{car.name}</h3>
            <p class="text-gray-300 mt-2">{car.year}</p>
            <div class="flex justify-between items-center mt-4">
              <span class="text-2xl font-bold text-blue-400">
                ${car.price.toLocaleString()}
              </span>
              <a 
                href={`/inventory/${car.id}`}
                class="px-4 py-2 bg-blue-600/20 text-blue-400 rounded-lg hover:bg-blue-600/30 transition-colors"
              >
                View Details
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</main>



  <!-- Featured Section -->
  <section id="featured" class="py-20 bg-linear-to-b from-gray-900 to-blue-900">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl md:text-5xl font-bold text-white text-center mb-16">Featured <span class="text-blue-400">Models</span></h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[1, 2, 3].map((_, i) => (
          <div class="car-card group">
            <div class="relative overflow-hidden rounded-t-xl">
              <img 
                src={`/images/car-${i + 1}.jpg`} 
                alt="Featured Car" 
                class="w-full h-48 object-cover transform transition-transform group-hover:scale-110"
              />
              <div class="absolute top-4 right-4 bg-blue-600 text-white px-3 py-1 rounded-full text-sm">
                Featured
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2">Luxury Model {i + 1}</h3>
              <p class="text-gray-400 mb-4">Experience unmatched performance and style.</p>
              <div class="flex justify-between items-center">
                <span class="text-2xl font-bold text-blue-400">$75,000</span>
                <button class="btn-secondary-sm">View Details</button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-linear-to-t from-gray-900 to-blue-900/50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="stat-card">
          <div class="text-4xl font-bold text-blue-400 mb-2">500+</div>
          <div class="text-gray-300">Cars in Stock</div>
        </div>
        <div class="stat-card">
          <div class="text-4xl font-bold text-blue-400 mb-2">1000+</div>
          <div class="text-gray-300">Happy Customers</div>
        </div>
        <div class="stat-card">
          <div class="text-4xl font-bold text-blue-400 mb-2">24/7</div>
          <div class="text-gray-300">Support Available</div>
        </div>
        <div class="stat-card">
          <div class="text-4xl font-bold text-blue-400 mb-2">15+</div>
          <div class="text-gray-300">Years Experience</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 bg-linear-to-br from-blue-900 via-black to-gray-900">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl md:text-5xl font-bold text-white text-center mb-16">Why Choose <span class="text-blue-400">VillaCar</span></h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="feature-card">
          <div class="icon-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Premium Selection</h3>
          <p class="text-gray-400">Curated collection of luxury and performance vehicles</p>
        </div>
        
        <div class="feature-card">
          <div class="icon-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Flexible Financing</h3>
          <p class="text-gray-400">Tailored financial solutions to match your needs</p>
        </div>
        
        <div class="feature-card">
          <div class="icon-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Expert Service</h3>
          <p class="text-gray-400">Professional maintenance and support team</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-[url('/images/cta-bg.jpg')] bg-cover bg-center"></div>
    <div class="absolute inset-0 bg-black/70"></div>
    <div class="relative z-10 container mx-auto px-4 text-center">
            </div>
    </div>
  </div>
</div>
    </div>
  </section>
</div>

<style>
  /* Animations */
  @keyframes slideUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }

  .animate-slideUp {
    opacity: 0;
    animation: slideUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  }

  .animate-fadeIn {
    opacity: 0;
    animation: fadeIn 1.5s ease forwards;
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-pulse {
    animation: pulse 2s ease-in-out infinite;
  }

  /* Buttons */
  .btn-primary {
    @apply inline-flex items-center px-6 py-3 rounded-full bg-blue-600 text-white font-semibold
    transform transition-all duration-300 
    hover:bg-blue-500 hover:scale-105 hover:shadow-[0_0_20px_rgba(59,130,246,0.5)]
    active:scale-95 active:bg-blue-700;
  }

  .btn-secondary {
    @apply inline-flex items-center px-6 py-3 rounded-full bg-transparent text-white font-semibold
    border-2 border-white/30 backdrop-blur-sm transform transition-all duration-300
    hover:bg-white/10 hover:border-white hover:scale-105 hover:shadow-[0_0_20px_rgba(255,255,255,0.2)]
    active:scale-95 active:bg-white/20;
  }

  .btn-secondary-sm {
    @apply px-4 py-2 rounded-full bg-transparent text-blue-400 font-semibold text-sm
    border border-blue-400/30 transform transition-all duration-300
    hover:bg-blue-400/10 hover:border-blue-400 hover:scale-105;
  }

  /* Cards */
  .car-card {
    @apply bg-white/5 rounded-xl overflow-hidden backdrop-blur-sm
    border border-white/10 transform transition-all duration-300
    hover:scale-[1.02] hover:bg-white/10 hover:border-white/20
    hover:shadow-[0_0_30px_rgba(59,130,246,0.2)];
  }

  .feature-card {
    @apply p-6 rounded-xl bg-white/5 backdrop-blur-sm
    border border-white/10 transform transition-all duration-300
    hover:scale-105 hover:bg-white/10 hover:border-white/20
    hover:shadow-[0_0_30px_rgba(59,130,246,0.15)];
  }

  .stat-card {
    @apply p-6 rounded-xl bg-white/5 backdrop-blur-sm
    border border-white/10 transform transition-all duration-300
    hover:scale-105 hover:bg-white/10 hover:border-white/20;
  }

  /* Form Elements */
  .search-select {
    @apply w-full px-4 py-3 rounded-xl bg-white/10 text-white border border-white/20
    backdrop-blur-sm appearance-none cursor-pointer
    transition-all duration-300
    hover:bg-white/15 hover:border-white/30
    focus:outline-none focus:ring-2 focus:ring-blue-400/50;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23ffffff' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.5rem center;
    background-repeat: no-repeat;
    background-size: 1.5em 1.5em;
  }

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
    height: 10px;
  }

  ::-webkit-scrollbar-track {
    @apply bg-black/20;
  }

  ::-webkit-scrollbar-thumb {
    @apply bg-blue-600/50 rounded-full
    hover:bg-blue-600/70;
  }

  /* Icon Wrapper */
  .icon-wrapper {
    @apply w-16 h-16 rounded-full bg-blue-600/20 flex items-center justify-center
    mb-4 text-blue-400 transform transition-all duration-300
    group-hover:scale-110 group-hover:bg-blue-600/30;
  }
</style>
