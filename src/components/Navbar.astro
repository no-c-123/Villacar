---
const currentPath = Astro.url.pathname;
---

<nav class="bg-white shadow-lg sticky top-0 z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-20 items-center">
      <!-- Brand -->
      <a href="/" class="flex-shrink-0 flex items-center space-x-3 group">
        <div class="w-12 h-12 bg-gradient-to-br from-red-600 to-red-700 rounded-xl flex items-center justify-center shadow-lg transform group-hover:scale-105 transition-transform duration-300">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <div class="flex flex-col">
          <span class="font-bold text-2xl text-gray-900 leading-tight">Villacar</span>
          <span class="text-xs text-gray-500 font-medium tracking-wide">AUTOS LLC.</span>
        </div>
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex md:space-x-1">
        <a 
          href="/" 
          class={`${currentPath === '/' ? 'text-red-600 bg-red-50' : 'text-gray-700 hover:text-red-600 hover:bg-gray-50'} px-4 py-2 text-base font-semibold transition-all duration-300 rounded-lg`}
        >
          Home
        </a>
        <a 
          href="/inventory" 
          class={`${currentPath === '/inventory' ? 'text-red-600 bg-red-50' : 'text-gray-700 hover:text-red-600 hover:bg-gray-50'} px-4 py-2 text-base font-semibold transition-all duration-300 rounded-lg`}
        >
          Inventory
        </a>
        <a 
          href="/about" 
          class={`${currentPath === '/about' ? 'text-red-600 bg-red-50' : 'text-gray-700 hover:text-red-600 hover:bg-gray-50'} px-4 py-2 text-base font-semibold transition-all duration-300 rounded-lg`}
        >
          About
        </a>
        <a 
          href="/financing" 
          class={`${currentPath === '/financing' ? 'text-red-600 bg-red-50' : 'text-gray-700 hover:text-red-600 hover:bg-gray-50'} px-4 py-2 text-base font-semibold transition-all duration-300 rounded-lg`}
        >
          Financing
        </a>
        <a 
          href="/contact" 
          class={`${currentPath === '/contact' ? 'text-red-600 bg-red-50' : 'text-gray-700 hover:text-red-600 hover:bg-gray-50'} px-4 py-2 text-base font-semibold transition-all duration-300 rounded-lg`}
        >
          Contact
        </a>
      </div>

      <!-- Right Button -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="tel:9565666618" class="text-gray-700 hover:text-red-600 transition-colors flex items-center space-x-2 group">
          <div class="p-2 bg-red-50 rounded-lg group-hover:bg-red-100 transition-colors">
            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <span class="font-bold text-gray-900">(956) 566-6618</span>
        </a>
        <a 
          href="/contact" 
          class="bg-gradient-to-r from-red-600 to-red-700 text-white px-6 py-2.5 rounded-xl hover:shadow-xl transition-all duration-300 font-bold transform hover:-translate-y-0.5"
        >
          Get Started
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button 
          id="mobile-menu-button" 
          aria-label="Toggle menu" 
          class="text-gray-700 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-600 p-2"
        >
          <svg id="menu-open-icon" class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="menu-close-icon" class="h-6 w-6 hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-200">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="/" class="block text-gray-700 hover:bg-blue-50 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium transition-colors">Home</a>
      <a href="/inventory" class="block text-gray-700 hover:bg-blue-50 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium transition-colors">Inventory</a>
      <a href="/about" class="block text-gray-700 hover:bg-blue-50 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium transition-colors">About</a>
      <a href="/financing" class="block text-gray-700 hover:bg-blue-50 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium transition-colors">Financing</a>
      <a href="/contact" class="block text-gray-700 hover:bg-blue-50 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium transition-colors">Contact</a>
      <a href="/contact" class="block w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white px-3 py-2 rounded-md text-base font-medium text-center mt-4">Get Started</a>
    </div>
  </div>
</nav>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpenIcon = document.getElementById('menu-open-icon');
  const menuCloseIcon = document.getElementById('menu-close-icon');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuOpenIcon?.classList.toggle('hidden');
    menuCloseIcon?.classList.toggle('hidden');
  });
</script>
