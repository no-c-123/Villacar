  <!-- Search Overlay -->
  <div id="searchOverlay" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl p-6">
          <div class="flex items-center gap-4 mb-6">
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input 
              type="text" 
              id="searchInput"
              placeholder="Search vehicles by make, model, year..." 
              class="flex-1 text-2xl font-semibold text-gray-900 outline-none"
              autocomplete="off"
            />
            <button id="searchClose" class="text-gray-400 hover:text-gray-600 transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          
          <div id="searchResults" class="space-y-2 max-h-96 overflow-y-auto">
            <!-- Results will be populated by JavaScript -->
          </div>
          
          <div id="searchEmpty" class="hidden text-center py-8">
            <p class="text-gray-500">No vehicles found. Try a different search.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpenIcon = document.getElementById('menu-open-icon');
  const menuCloseIcon = document.getElementById('menu-close-icon');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuOpenIcon?.classList.toggle('hidden');
    menuCloseIcon?.classList.toggle('hidden');
  });

  // Wishlist count
  function updateWishlistCount() {
    const wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
    const countEl = document.getElementById('wishlistCount');
    if (countEl) {
      if (wishlist.length > 0) {
        countEl.textContent = wishlist.length.toString();
        countEl.style.display = 'flex';
      } else {
        countEl.style.display = 'none';
      }
    }
  }
  updateWishlistCount();
  window.addEventListener('storage', updateWishlistCount);
  setInterval(updateWishlistCount, 1000);

  // Search functionality
  const searchToggle = document.getElementById('searchToggle');
  const searchOverlay = document.getElementById('searchOverlay');
  const searchClose = document.getElementById('searchClose');
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const searchResults = document.getElementById('searchResults');
  const searchEmpty = document.getElementById('searchEmpty');

  // Fetch cars data
  let carsData: any[] = [];
  fetch('/src/data/cars.ts')
    .then(response => response.text())
    .then(data => {
      // This is a simple approach - in production, you'd want an API endpoint
      // For now, we'll use the cars from the page if they exist
    });

  searchToggle?.addEventListener('click', () => {
    searchOverlay?.classList.remove('hidden');
    searchInput?.focus();
  });

  searchClose?.addEventListener('click', () => {
    searchOverlay?.classList.add('hidden');
    searchInput!.value = '';
    searchResults!.innerHTML = '';
  });

  searchOverlay?.addEventListener('click', (e) => {
    if (e.target === searchOverlay) {
      searchOverlay.classList.add('hidden');
      searchInput!.value = '';
      searchResults!.innerHTML = '';
    }
  });

  searchInput?.addEventListener('input', async () => {
    const query = searchInput.value.toLowerCase().trim();
    
    if (query.length < 2) {
      searchResults!.innerHTML = '';
      searchEmpty!.classList.add('hidden');
      return;
    }

    // In a real app, you'd fetch from an API
    // For now, we'll use a simple client-side search
    try {
      const response = await fetch('/inventory');
      const html = await response.text();
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      const carItems = doc.querySelectorAll('.car-item');
      
      const results: any[] = [];
      carItems.forEach(item => {
        const text = item.textContent?.toLowerCase() || '';
        const href = item.getAttribute('href') || '';
        if (text.includes(query)) {
          const img = item.querySelector('img');
          const title = item.querySelector('h3');
          const price = item.querySelector('.text-2xl.font-bold.text-red-600');
          
          results.push({
            href,
            image: img?.getAttribute('src') || '',
            title: title?.textContent?.trim() || '',
            price: price?.textContent?.trim() || ''
          });
        }
      });

      if (results.length === 0) {
        searchResults!.innerHTML = '';
        searchEmpty!.classList.remove('hidden');
      } else {
        searchEmpty!.classList.add('hidden');
        searchResults!.innerHTML = results.slice(0, 5).map(result => `
          <a href="${result.href}" class="flex items-center gap-4 p-3 hover:bg-gray-50 rounded-xl transition-colors">
            <img src="${result.image}" alt="${result.title}" class="w-20 h-16 object-cover rounded-lg" />
            <div class="flex-1">
              <p class="font-semibold text-gray-900">${result.title}</p>
              <p class="text-red-600 font-bold">${result.price}</p>
            </div>
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        `).join('');
      }
    } catch (error) {
      console.error('Search error:', error);
    }
  });
</script>
