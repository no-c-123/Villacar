---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import FinanceCalculator from '../../components/FinanceCalculator.astro';
import { cars, getCarById } from '../../data/cars';

export function getStaticPaths() {
  return cars.map((car) => ({
    params: { id: car.id },
  }));
}

const { id } = Astro.params;
const car = getCarById(id);

if (!car) {
  return Astro.redirect('/inventory');
}
---

<Layout title={`${car.year} ${car.make} ${car.model} - Villacar Autos LLC.`}>
  <Navbar />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Breadcrumb -->
    <section class="bg-white border-b border-gray-200 py-4">
      <div class="container mx-auto px-4">
        <nav class="flex items-center space-x-2 text-sm text-gray-600">
          <a href="/" class="hover:text-red-600 transition-colors">Home</a>
          <span>â€º</span>
          <a href="/inventory" class="hover:text-red-600 transition-colors">Inventory</a>
          <span>â€º</span>
          <span class="text-gray-900 font-semibold">{car.year} {car.make} {car.model}</span>
        </nav>
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Left Column - Images & Details -->
          <div class="lg:col-span-2">
            <!-- Main Image Gallery -->
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-8">
              <div class="relative">
                <img 
                  id="mainImage"
                  src={car.images[0]} 
                  alt={`${car.year} ${car.make} ${car.model}`}
                  class="w-full h-96 object-cover"
                />
                <div class="absolute top-4 left-4">
                  <span class={`px-5 py-2 rounded-full text-sm font-bold shadow-lg ${
                    car.condition === 'New' ? 'bg-green-600 text-white' :
                    car.condition === 'Certified' ? 'bg-blue-600 text-white' :
                    'bg-gray-700 text-white'
                  }`}>
                    {car.condition}
                  </span>
                </div>
                <button 
                  id="wishlistBtn"
                  data-car-id={car.id}
                  class="wishlist-btn absolute top-4 right-4 w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg hover:bg-white transition-all duration-200 group"
                  aria-label="Add to wishlist"
                >
                  <svg class="w-6 h-6 text-gray-600 group-hover:text-red-600 transition-colors wishlist-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </button>
              </div>
              
              <!-- Thumbnail Gallery -->
              <div class="p-6 grid grid-cols-4 gap-4">
                {car.images.map((image, index) => (
                  <button
                    class="thumbnail-btn relative overflow-hidden rounded-lg border-2 border-gray-200 hover:border-red-600 transition-all duration-300"
                    data-image={image}
                  >
                    <img 
                      src={image} 
                      alt={`${car.year} ${car.make} ${car.model} - View ${index + 1}`}
                      class="w-full h-24 object-cover"
                    />
                  </button>
                ))}
              </div>
            </div>

            <!-- Vehicle Overview -->
            <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-3xl font-bold text-gray-900">Vehicle Overview</h2>
                <!-- Social Share Buttons -->
                <div class="flex items-center gap-2">
                  <span class="text-sm text-gray-600 mr-2">Share:</span>
                  <button 
                    onclick="shareOnFacebook()"
                    class="w-10 h-10 bg-blue-600 hover:bg-blue-700 rounded-full flex items-center justify-center transition-all duration-200 hover:scale-110"
                    aria-label="Share on Facebook"
                  >
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </button>
                  <button 
                    onclick="shareOnTwitter()"
                    class="w-10 h-10 bg-black hover:bg-gray-800 rounded-full flex items-center justify-center transition-all duration-200 hover:scale-110"
                    aria-label="Share on X"
                  >
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  </button>
                  <button 
                    onclick="shareViaEmail()"
                    class="w-10 h-10 bg-gray-600 hover:bg-gray-700 rounded-full flex items-center justify-center transition-all duration-200 hover:scale-110"
                    aria-label="Share via email"
                  >
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </button>
                  <button 
                    onclick="copyLink()"
                    class="w-10 h-10 bg-custom-red hover:bg-red-700 rounded-full flex items-center justify-center transition-all duration-200 hover:scale-110"
                    aria-label="Copy link"
                  >
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  </button>
                </div>
              </div>
              <p class="text-gray-700 text-lg leading-relaxed mb-8">
                {car.description}
              </p>

              <!-- Specs Grid -->
              <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <div class="text-center p-4 bg-gray-50 rounded-xl">
                  <div class="text-red-600 text-2xl font-bold mb-1">{car.year}</div>
                  <div class="text-gray-600 text-sm">Year</div>
                </div>
                <div class="text-center p-4 bg-gray-50 rounded-xl">
                  <div class="text-red-600 text-2xl font-bold mb-1">{car.mileage.toLocaleString()}</div>
                  <div class="text-gray-600 text-sm">Miles</div>
                </div>
                <div class="text-center p-4 bg-gray-50 rounded-xl">
                  <div class="text-red-600 text-2xl font-bold mb-1">{car.transmission}</div>
                  <div class="text-gray-600 text-sm">Transmission</div>
                </div>
                <div class="text-center p-4 bg-gray-50 rounded-xl">
                  <div class="text-red-600 text-2xl font-bold mb-1">{car.fuelType}</div>
                  <div class="text-gray-600 text-sm">Fuel Type</div>
                </div>
              </div>
            </div>

            <!-- Features & Options -->
            <div class="bg-white rounded-2xl shadow-xl p-8">
              <h2 class="text-3xl font-bold text-gray-900 mb-6">Features & Options</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {car.features.map((feature) => (
                  <div class="flex items-start">
                    <svg class="w-6 h-6 text-red-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Right Column - Purchase Info -->
          <div class="lg:col-span-1">
            <!-- Price Card -->
            <div class="bg-gradient-to-br from-red-600 to-red-700 rounded-2xl shadow-2xl p-8 text-white sticky top-8 mb-8">
              <div class="text-center mb-6">
                <h1 class="text-3xl font-bold mb-2">
                  {car.year} {car.make}
                </h1>
                <p class="text-xl text-red-100">{car.model}</p>
              </div>

              <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 mb-6">
                <div class="text-sm text-red-100 mb-2">Starting at</div>
                <div class="text-5xl font-bold mb-4">${car.price.toLocaleString()}</div>
                <div class="text-sm text-red-100">+ taxes & fees</div>
              </div>

              <!-- Quick Specs -->
              <div class="space-y-3 mb-8 pb-8 border-b border-white/20">
                <div class="flex justify-between items-center">
                  <span class="text-red-100">Body Type</span>
                  <span class="font-semibold">{car.bodyType}</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-red-100">Color</span>
                  <span class="font-semibold">{car.color}</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-red-100">VIN</span>
                  <span class="font-mono text-xs">{car.vin}</span>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="space-y-3">
                <a 
                  href="/contact" 
                  class="block w-full py-4 bg-white text-red-600 text-center rounded-xl font-bold hover:bg-gray-100 transition-all duration-300 shadow-lg"
                >
                  Schedule Test Drive
                </a>
                <a 
                  href="/contact" 
                  class="block w-full py-4 bg-white/10 backdrop-blur-sm text-white text-center rounded-xl font-bold hover:bg-white/20 transition-all duration-300 border border-white/30"
                >
                  Get Pre-Approved
                </a>
                <a 
                  href="tel:555-123-4567" 
                  class="block w-full py-4 bg-white/10 backdrop-blur-sm text-white text-center rounded-xl font-bold hover:bg-white/20 transition-all duration-300 border border-white/30"
                >
                  ðŸ“ž (555) 123-4567
                </a>
              </div>
            </div>

            <!-- Additional Info Card -->
            <div class="bg-white rounded-2xl shadow-xl p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-4">Why Buy From Us?</h3>
              <ul class="space-y-3 text-gray-700">
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-red-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>24+ years in business</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-red-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>No-pressure sales process</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-red-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Competitive financing options</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-red-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Thoroughly inspected vehicles</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Finance Calculator Section -->
        <div class="mt-16">
          <div class="max-w-2xl mx-auto">
            <FinanceCalculator price={car.price} />
          </div>
        </div>

        <!-- Similar Vehicles -->
        <div class="mt-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-8 text-center">Similar Vehicles</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {cars.filter(c => c.id !== car.id && c.bodyType === car.bodyType).slice(0, 3).map((similarCar) => (
              <a href={`/cars/${similarCar.id}`} class="group">
                <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
                  <div class="relative overflow-hidden h-56">
                    <img 
                      src={similarCar.images[0]} 
                      alt={`${similarCar.year} ${similarCar.make} ${similarCar.model}`}
                      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    />
                  </div>
                  <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-red-600 transition-colors">
                      {similarCar.year} {similarCar.make} {similarCar.model}
                    </h3>
                    <div class="flex justify-between items-center">
                      <span class="text-2xl font-bold text-red-600">
                        ${similarCar.price.toLocaleString()}
                      </span>
                      <span class="text-gray-600 text-sm">
                        {similarCar.mileage.toLocaleString()} mi
                      </span>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <script define:vars={{ car }}>
    // Social sharing functions
    function shareOnFacebook() {
      const url = encodeURIComponent(window.location.href);
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}`, '_blank', 'width=600,height=400');
    }

    function shareOnTwitter() {
      const url = encodeURIComponent(window.location.href);
      const text = encodeURIComponent(`Check out this ${car.year} ${car.make} ${car.model}!`);
      window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank', 'width=600,height=400');
    }

    function shareViaEmail() {
      const subject = encodeURIComponent(`Check out this ${car.year} ${car.make} ${car.model}`);
      const body = encodeURIComponent(`I found this vehicle and thought you might be interested:\n\n${car.year} ${car.make} ${car.model}\nPrice: $${car.price.toLocaleString()}\n\n${window.location.href}`);
      window.location.href = `mailto:?subject=${subject}&body=${body}`;
    }

    function copyLink() {
      navigator.clipboard.writeText(window.location.href).then(() => {
        alert('Link copied to clipboard!');
      });
    }

    // Make functions available globally
    // @ts-ignore - Adding functions to window for onclick handlers
    window.shareOnFacebook = shareOnFacebook;
    // @ts-ignore
    window.shareOnTwitter = shareOnTwitter;
    // @ts-ignore
    window.shareViaEmail = shareViaEmail;
    // @ts-ignore
    window.copyLink = copyLink;

    // Wishlist functionality
    const wishlistBtn = document.getElementById('wishlistBtn');
    const carId = wishlistBtn?.getAttribute('data-car-id');
    
    function getWishlist() {
      return JSON.parse(localStorage.getItem('wishlist') || '[]');
    }
    
    function saveWishlist(wishlist) {
      localStorage.setItem('wishlist', JSON.stringify(wishlist));
    }
    
    function updateWishlistUI() {
      const wishlist = getWishlist();
      const icon = wishlistBtn?.querySelector('.wishlist-icon');
      if (wishlist.includes(carId || '')) {
        icon?.setAttribute('fill', 'currentColor');
        icon?.classList.add('text-red-600');
      } else {
        icon?.setAttribute('fill', 'none');
        icon?.classList.remove('text-red-600');
      }
    }
    
    wishlistBtn?.addEventListener('click', () => {
      let wishlist = getWishlist();
      if (wishlist.includes(carId || '')) {
        wishlist = wishlist.filter(id => id !== carId);
      } else {
        wishlist.push(carId);
      }
      saveWishlist(wishlist);
      updateWishlistUI();
    });
    
    updateWishlistUI();

    // Image gallery functionality
    const thumbnails = document.querySelectorAll('.thumbnail-btn');
    const mainImage = document.getElementById('mainImage');

    thumbnails.forEach((thumbnail) => {
      thumbnail.addEventListener('click', () => {
        const imageUrl = thumbnail.getAttribute('data-image');
        if (mainImage && imageUrl) {
          mainImage.src = imageUrl;
        }
        
        // Update active state
        thumbnails.forEach(t => t.classList.remove('border-red-600'));
        thumbnails.forEach(t => t.classList.add('border-gray-200'));
        thumbnail.classList.remove('border-gray-200');
        thumbnail.classList.add('border-red-600');
      });
    });

    // Set first thumbnail as active
    if (thumbnails.length > 0) {
      thumbnails[0].classList.remove('border-gray-200');
      thumbnails[0].classList.add('border-red-600');
    }
  </script>
</Layout>
