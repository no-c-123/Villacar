---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { cars, type Car } from '../data/cars';
---

<Layout 
  title="Inventory - VillaCar | Browse Our Premium Vehicle Collection"
  description="Explore our complete inventory of luxury and performance vehicles. Find your perfect car from brands like Tesla, BMW, Porsche, Mercedes-Benz, Audi, and more."
>
  <Navbar />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Page Header -->
    <section class="bg-gradient-to-br from-gray-900 to-blue-900 py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 text-center">
          Our <span class="text-blue-400">Inventory</span>
        </h1>
        <p class="text-xl text-gray-300 text-center max-w-3xl mx-auto">
          Browse our carefully curated collection of premium vehicles
        </p>
      </div>
    </section>

    <!-- Car Grid -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <div class="mb-8">
          <p class="text-gray-600">
            <span class="font-semibold text-gray-900">{cars.length}</span> vehicles available
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {cars.map((car) => (
            <a href={`/cars/${car.id}`} class="group">
              <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:scale-[1.02]">
                <div class="relative overflow-hidden">
                  <img 
                    src={car.images[0]} 
                    alt={`${car.year} ${car.make} ${car.model}`}
                    class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
                    onerror="this.src='/images/placeholder-car.jpg'"
                  />
                  <div class="absolute top-4 left-4">
                    <span class={`px-3 py-1 rounded-full text-sm font-semibold ${
                      car.condition === 'New' ? 'bg-green-500 text-white' :
                      car.condition === 'Certified' ? 'bg-blue-500 text-white' :
                      'bg-gray-700 text-white'
                    }`}>
                      {car.condition}
                    </span>
                  </div>
                </div>

                <div class="p-6">
                  <h3 class="text-2xl font-bold text-gray-900 mb-2">
                    {car.year} {car.make} {car.model}
                  </h3>

                  <div class="flex flex-wrap gap-4 mb-4 text-sm text-gray-600">
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {car.mileage.toLocaleString()} mi
                    </span>
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                      {car.fuelType}
                    </span>
                  </div>

                  <div class="flex justify-between items-center pt-4 border-t border-gray-200">
                    <div>
                      <p class="text-3xl font-bold text-blue-600">
                        ${car.price.toLocaleString()}
                      </p>
                    </div>
                    <span class="text-blue-600 font-semibold group-hover:translate-x-2 transition-transform">
                      View â†’
                    </span>
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
