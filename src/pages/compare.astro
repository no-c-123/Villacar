---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { cars } from '../data/cars';
---

<Layout title="Compare Vehicles - Villacar Autos LLC.">
  <Navbar />
  
  <main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-gray-900 mb-4">Compare Vehicles</h1>
        <p class="text-xl text-gray-600">Select up to 3 vehicles to compare side-by-side</p>
      </div>

      <!-- Vehicle Selection -->
      <div class="max-w-4xl mx-auto mb-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white rounded-2xl shadow-xl p-6">
            <label class="block text-sm font-semibold text-gray-700 mb-3">Vehicle 1</label>
            <select id="car1" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-custom-red focus:ring-2 focus:ring-custom-red/20 transition-all">
              <option value="">Select a vehicle</option>
              {cars.map(car => (
                <option value={car.id}>{car.year} {car.make} {car.model}</option>
              ))}
            </select>
          </div>
          
          <div class="bg-white rounded-2xl shadow-xl p-6">
            <label class="block text-sm font-semibold text-gray-700 mb-3">Vehicle 2</label>
            <select id="car2" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-custom-red focus:ring-2 focus:ring-custom-red/20 transition-all">
              <option value="">Select a vehicle</option>
              {cars.map(car => (
                <option value={car.id}>{car.year} {car.make} {car.model}</option>
              ))}
            </select>
          </div>
          
          <div class="bg-white rounded-2xl shadow-xl p-6">
            <label class="block text-sm font-semibold text-gray-700 mb-3">Vehicle 3 (Optional)</label>
            <select id="car3" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-custom-red focus:ring-2 focus:ring-custom-red/20 transition-all">
              <option value="">Select a vehicle</option>
              {cars.map(car => (
                <option value={car.id}>{car.year} {car.make} {car.model}</option>
              ))}
            </select>
          </div>
        </div>
      </div>

      <!-- Comparison Table -->
      <div id="comparisonTable" class="hidden">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-gradient-to-r from-custom-red to-red-700 text-white">
                <tr>
                  <th class="px-6 py-4 text-left font-semibold">Specification</th>
                  <th id="header1" class="px-6 py-4 text-center font-semibold"></th>
                  <th id="header2" class="px-6 py-4 text-center font-semibold"></th>
                  <th id="header3" class="px-6 py-4 text-center font-semibold hidden"></th>
                </tr>
              </thead>
              <tbody id="comparisonBody" class="divide-y divide-gray-200">
                <!-- Will be populated by JavaScript -->
              </tbody>
            </table>
          </div>
        </div>

        <div class="mt-8 text-center">
          <button 
            onclick="window.print()" 
            class="inline-flex items-center gap-2 bg-gradient-to-r from-custom-red to-red-700 text-white px-8 py-3 rounded-xl font-semibold hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
            </svg>
            Print Comparison
          </button>
        </div>
      </div>

      <!-- Empty State -->
      <div id="emptyState" class="max-w-md mx-auto text-center py-16">
        <div class="w-24 h-24 bg-gradient-to-br from-red-100 to-red-200 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-3">Select vehicles to compare</h2>
        <p class="text-gray-600">Choose at least 2 vehicles from the dropdowns above to see a detailed comparison</p>
      </div>
    </div>
  </main>

  <Footer />

  <script define:vars={{ cars }}>
    const car1Select = document.getElementById('car1');
    const car2Select = document.getElementById('car2');
    const car3Select = document.getElementById('car3');
    const comparisonTable = document.getElementById('comparisonTable');
    const emptyState = document.getElementById('emptyState');
    const comparisonBody = document.getElementById('comparisonBody');

    function updateComparison() {
      const car1Id = car1Select.value;
      const car2Id = car2Select.value;
      const car3Id = car3Select.value;

      if (!car1Id && !car2Id && !car3Id) {
        comparisonTable?.classList.add('hidden');
        emptyState?.classList.remove('hidden');
        return;
      }

      if (!car1Id || !car2Id) {
        comparisonTable?.classList.add('hidden');
        emptyState?.classList.remove('hidden');
        return;
      }

      const selectedCars = [
        cars.find(c => c.id === car1Id),
        cars.find(c => c.id === car2Id),
        car3Id ? cars.find(c => c.id === car3Id) : null
      ].filter(Boolean);

      if (selectedCars.length < 2) {
        comparisonTable?.classList.add('hidden');
        emptyState?.classList.remove('hidden');
        return;
      }

      emptyState?.classList.add('hidden');
      comparisonTable?.classList.remove('hidden');

      // Update headers
      const header1 = document.getElementById('header1');
      if (header1) {
        header1.innerHTML = `
        <div class="flex flex-col items-center">
          <img src="${selectedCars[0].images[0]}" alt="${selectedCars[0].year} ${selectedCars[0].make}" class="w-32 h-24 object-cover rounded-lg mb-2" />
          <div class="font-bold">${selectedCars[0].year} ${selectedCars[0].make}</div>
          <div class="text-sm">${selectedCars[0].model}</div>
        </div>
      `;
      }

      const header2 = document.getElementById('header2');
      if (header2) {
        header2.innerHTML = `
        <div class="flex flex-col items-center">
          <img src="${selectedCars[1].images[0]}" alt="${selectedCars[1].year} ${selectedCars[1].make}" class="w-32 h-24 object-cover rounded-lg mb-2" />
          <div class="font-bold">${selectedCars[1].year} ${selectedCars[1].make}</div>
          <div class="text-sm">${selectedCars[1].model}</div>
        </div>
      `;
      }

      const header3 = document.getElementById('header3');
      if (selectedCars[2] && header3) {
        header3.classList.remove('hidden');
        header3.innerHTML = `
          <div class="flex flex-col items-center">
            <img src="${selectedCars[2].images[0]}" alt="${selectedCars[2].year} ${selectedCars[2].make}" class="w-32 h-24 object-cover rounded-lg mb-2" />
            <div class="font-bold">${selectedCars[2].year} ${selectedCars[2].make}</div>
            <div class="text-sm">${selectedCars[2].model}</div>
          </div>
        `;
      } else if (header3) {
        header3.classList.add('hidden');
      }

      // Build comparison rows
      const specs = [
        { label: 'Price', key: 'price', format: (v) => `$${v.toLocaleString()}` },
        { label: 'Year', key: 'year' },
        { label: 'Condition', key: 'condition' },
        { label: 'Mileage', key: 'mileage', format: (v) => `${v.toLocaleString()} mi` },
        { label: 'Body Type', key: 'bodyType' },
        { label: 'Color', key: 'color' },
        { label: 'Transmission', key: 'transmission' },
        { label: 'Fuel Type', key: 'fuelType' },
        { label: 'Engine', key: 'engine' },
        { label: 'Drivetrain', key: 'drivetrain' }
      ];

      if (comparisonBody) {
        comparisonBody.innerHTML = specs.map(spec => {
        const values = selectedCars.map(car => {
          const value = car[spec.key];
          return spec.format ? spec.format(value) : value;
        });

        return `
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 font-semibold text-gray-700">${spec.label}</td>
            ${values.map((value, index) => `
              <td class="px-6 py-4 text-center text-gray-900 ${index === 2 && !selectedCars[2] ? 'hidden' : ''}">${value}</td>
            `).join('')}
          </tr>
        `;
      }).join('');

        // Add action buttons row
        comparisonBody.innerHTML += `
        <tr>
          <td class="px-6 py-4 font-semibold text-gray-700">Actions</td>
          ${selectedCars.map((car, index) => `
            <td class="px-6 py-4 text-center ${index === 2 && !selectedCars[2] ? 'hidden' : ''}">
              <a href="/cars/${car.id}" class="inline-block bg-custom-red text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-all text-sm font-semibold">
                View Details
              </a>
            </td>
          `).join('')}
        </tr>
      `;
      }
    }

    car1Select?.addEventListener('change', updateComparison);
    car2Select?.addEventListener('change', updateComparison);
    car3Select?.addEventListener('change', updateComparison);

    updateComparison();
  </script>
</Layout>
